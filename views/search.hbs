<div class="bg"></div>
<div align="left" class="container">
    <label class="label">Category</label>
    <form action="/search" method="get">
    <div class="columns is-gapless">
        <div class="field column is-narrow">
                <div class="control">
                  <div class="select">
                    <select id="select-category" name="category">
                      <option value="All">All</option>
                      <option value="Book">Book</option>
                      <option value="Stationery">Stationery</option>
                      <option value="Bike">Bike</option>
                      <option value="Apartment">Apartment</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                </div>
              </div>
            
            <div class="column"> 
            <div class="searchbar">
                <input class="input" type="text" placeholder="Search" name="sitem">
        </div>
        </div>
        <div class="column is-narrow">
            <div class="searchbutton">
                    <button class="button is-primary">
                    <span class="icon">
                        <i class="fa fa-search"></i>
                    </span>
                    </button>            
            </div>
        </div> 
    </div>
    <div class="columns">
        <div class="column">
            <p>Showing results for {{sitem}}</p>
        </div>
        <div class="field columns is-1">
            <label class="label column">Sort By</label>
             <div class="control column">
                  <div class="select">
                    <select id="select-sort-type" name="SortBy">
                      <option value="priceA">Price(Low to High)</option>
                      <option value="priceD">Price(High to Low)</option>    
                      <option value="Date-PostedA">Date Posted(Oldest First)</option>
                      <option value="Date-PostedB">Date Posted(Newest First)</option>    
                    </select>
                  </div>
                </div>
        </div>
    </div>         
    </form>
    
<div align="center" class="resultcard columns is-multiline">    
{{#each result}}
     <div class="card">
         <p class="title is-4">{{this.name}}</p>
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="/upload/view/{{this.img}}">
    </figure>
  </div>
    <p>Price: {{this.price}}</p>     
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="{{this.posted_by.picture}}">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-7">Posted By: {{this.posted_by.name}}</p>
      </div>
    </div>

    <div class="content">
      <time datetime="2016-1-1">{{this.newTime}}</time> 
    </div> 
  </div>
    <footer class="card-footer">
    <a href="/product/{{this._id}}" class="card-footer-item">View</a>
  </footer>
     
</div>
{{/each}}
</div>    
</div>  

