          <header class="card-header">
            <p class="card-header-title">{{this.name}}</p>
          </header>
          <div class="card-content column is-one-quarter itemBox">
            <div class="content">
              <p>Type:{{this.type}}</p>
              <p>Price:{{this.price}}</p>
            </br>
          </div>
        </div>
        <footer class="modal-card-foot">
          <a href="/product/{{this._id}}">View Product</a>
        </footer>
      </div>
