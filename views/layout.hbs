<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.3/css/bulma.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>

    <nav class="navbar is-light">
      <div class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item title" href="/">5117 Express Project Template</a>
        </div>
        <div class="navbar-end">
          {{#if user}}
            <div class="navbar-item has-dropdown is-hoverable">
    <a class="navbar-link">
      <span class="navbar-item">
        <figure class="image is-16x16">
          <img src="{{ user.picture }}" alt="Image">
        </figure>
        &nbsp;
        {{ user.displayName }}
      </span>
    </a>

    <div class="navbar-dropdown">
      <a class="navbar-item">
        Purchase History
      </a>
      <a class="navbar-item">
        Listings
      </a>
      <a class="navbar-item">
        Edit Profile
      </a>
      <hr class="navbar-divider">
      <div>
        <a class="navbar-item" href="/logout">Sign Out</a>
      </div>
    </div>
  </div>

          {{else}}
            <a class="navbar-item" href="/login">Sign In</a>
          {{/if}}
        </div>
      </div>
    </nav>

    <section class="section">
      <div class="content">
        {{{body}}}
      </div>
    </section>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/locale/af.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATTpBUEZi5-hU-cCTlzAbThG0sVFszouU&callback=initMap">
    <script src="/javascripts/local.js"></script>
    </script>
    {{#each scripts}}
      <script src="/javascripts/{{this}}"></script>
    {{/each}}
  </body>
</html>
